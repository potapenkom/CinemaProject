@using CinemaProject.Models
@model IEnumerable<Actor>

@{
    ViewBag.Title = "All Female";
}

<h2>@ViewBag.Title.</h2>
<div class="row d-flex justify-content-center">
    <div class="col-10 mt-5">
        <table class="table table-hover table-bg-light">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">Age</th>
                    <th scope="col">Movie</th>
                </tr>
            </thead>
            @{
                foreach (var female in Model)
                {

                    <tbody>
                        <tr>
                            <th scope="row">@female.Id</th>
                            <td>@female.FirstName</td>
                            <td>@female.LastName</td>
                            <td>@female.Age.ToString()</td>
                            <td>@female.Movie.Name</td>
                        </tr>
                    </tbody>
                }
            }
        </table>
    </div>
</div>




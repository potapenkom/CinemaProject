@using CinemaProject.Models
@model IEnumerable<Actor>

@{
    ViewBag.Title = "All Male";
}

<h2>@ViewBag.Title.</h2>
<div class="row d-flex justify-content-center">
    <div class="col-10 mt-5">
        <table class="table table-hover table-bg-light">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">Age</th>
                    <th scope="col">Movie</th>
                </tr>
            </thead>
            @{
                foreach (var male in Model)
                {

                    <tbody>
                        <tr>
                            <th scope="row">@male.Id</th>
                            <td>@male.FirstName</td>
                            <td>@male.LastName</td>
                            <td>@male.Age.ToString()</td>
                            <td>@male.Movie.Name</td>
                        </tr>
                    </tbody>
                }
            }
        </table>
    </div>
</div>



